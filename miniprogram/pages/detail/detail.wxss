/**index.wxss**/

page {
  background:white;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.title{
  display: flex;
  height: 20%;
  width: 100%;
  font-size:50rpx;
  flex-direction:row;
  margin: 30rpx 0rpx 20rpx 0rpx;
  justify-content:space-around;
  border-bottom: 1rpx solid rgba(175, 174, 174, 0.719);
}

.title-column{
  margin-bottom: 20rpx;
  flex-direction:column;
}

.title-currentEarning{
  color: rgb(247, 143, 46);
}

.title-description{
  color: rgb(138, 137, 137);
  font-size: 30rpx;
}

.title-outOfWork{
  color: rgb(18, 168, 51);
}

.title-absenteeism{
  color: rgb(255, 29, 29);
}

.title-unit{
  font-size:35rpx;
}

.first-info-time{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  color: rgb(66, 65, 65);
  font-size: 30rpx;
  margin: 20rpx 10rpx 20rpx 10rpx;
}

.point{
  color: rgb(66, 65, 65);
  font-weight: 800;
}

.first-info{
  height: 100rpx;
  display: flex;
  text-align: center;
  flex-direction: row;
  justify-content: space-between;
  margin: 0rpx 10rpx 0rpx 10rpx;
  background-color: rgba(236, 232, 232, 0.349);
}

.first-info-text{
  display: flex;
  font-size: 30rpx;
  color: rgba(66, 65, 65, 0.774);
  align-items: center;
  margin: 0 10rpx 0 10rpx;
}

.calendar-statistics{
  height: 150rpx;
  display: flex;
  text-align: center;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1rpx solid rgba(175, 174, 174, 0.199);
}

.image-right{
  display: flex;
  align-items: center;
  text-align: center;
}

.arrow-right{
  width: 40rpx;
  height: 40rpx;
}


/**index.wxss**/
/*圆环进度条文字*/

.calendar-statistics-image{
  display: flex;
  text-align: center;
  flex-direction: row;
  justify-content: space-around;
  border-bottom: 1rpx solid rgba(175, 174, 174, 0.199);
}



/*圆环进度条文字*/
.circle_info{
  position: absolute; 
  width: 100%;
  left: 50%;
  top: 50%; 
  transform: translate(-50%,-50%); 
  display: flex;  
  align-items: center;
  justify-content: center
}
.circle_dot{
  width:16rpx;
  height: 16rpx;  
  border-radius: 50%;
  background-color: #fb9126;
} 
.circle_txt{
  padding-left: 10rpx;
  color: rgb(231, 40, 40);
  font-size: 36rpx; 
  letter-spacing: 2rpx;
}


