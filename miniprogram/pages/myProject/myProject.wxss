

.content {
  display: flex;
  flex-direction: column;
  justify-content:flex-start;
  background: #fff;
  width: 100%;
  height: 100%;
}

.table-header {
    display: flex;
    flex-flow: row;
    justify-content: start;
    background: #c7c8ca; 
    width: 100%;
    font-size: 30rpx;
    color: #fff;
}



scroll-view {
  display: flex;
  flex-flow: row;
  justify-content: space-around;
  height: 100%;
  overflow: scroll;
}

.image{
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.table-item-row{
  justify-content: flex-start;
}

.table-item-column-noborder{
  width: 100%;
  margin:20rpx;
}