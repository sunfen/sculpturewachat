/**index.wxss**/

page {
  background:white;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.title{
  display: flex;
  height: 20%;
  width: 100%;
  font-size:30rpx;
  flex-direction:row;
  margin: 30rpx 0rpx 20rpx 0rpx;
  justify-content:space-around;
  border-bottom: 1rpx solid rgba(175, 174, 174, 0.719);
}

.title-column{
  margin-bottom: 20rpx;
  flex-direction:column;
  justify-content:center;
  text-align: center;
}

.title-currentEarning{
  color: rgb(247, 143, 46);
}

.title-description{
  color: rgb(138, 137, 137);
  font-size: 25rpx;
}

.title-outOfWork{
  color: rgb(18, 168, 51);
}

.title-absenteeism{
  color: rgb(255, 29, 29);
}

.center{
  display: flex;
  flex-direction:row;
  padding: 16px 0.5px 10px 16px;
  justify-content:space-between;
  border-bottom: 1rpx solid rgba(175, 174, 174, 0.719);
  font-weight: 400;
  font-size: 25rpx;
}

.first-info-time{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  color: rgb(66, 65, 65);
  font-size: 30rpx;
  margin: 20rpx 10rpx 20rpx 10rpx;
}


.center-wages{
  display: flex;
  flex-direction: column;
  justify-content:flex-start;
}

.center-address{
  display: flex;
  flex-direction: column;
  justify-content:flex-start;
}


@import '../../pages/calendar/index.wxss';

.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}


/*对话框 */

.commodity_attr_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  flex-direction:column;
  justify-content: space-around;
  text-align: center;
}

.commodity_attr_box .border{
  border-bottom: 1rpx solid rgb(163, 162, 162);
  margin:5% 20% 5% 20%;

}

.commodity_attr_box view text{
  color: rgb(100, 181, 247);
}