  flex-direction: column;
  justify-content: flex-start;
}

.query{
  background: rgba(228, 227, 227, 0.925);
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  text-align: center;
  font-size: 25rpx;
  padding: 10rpx;
}

.query-total{
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
  font-size: 30rpx;
  color: rgb(247, 97, 11);
  font-weight: 600;
}
.query-total text{
  color: rgb(18, 192, 33);
}


.query picker{
  background:#fff;
  height: 60rpx;
  width: 150rpx;
  color: #000;
  display: flex;
  flex-direction: row;
  justify-content: center;
  text-align: center;
  border-radius: 40rpx;
  margin: 20rpx;
  padding: 2rpx;
}

.icon-pull-down {
  color: rgb(141, 137, 137);
}


.icon-point{
  font-size: 10rpx;
  color: rgb(150, 149, 149);
}

.name{
  display: flex;
