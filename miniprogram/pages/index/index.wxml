<component-topnav></component-topnav>  

<view wx:if="{{!isLogin}}">
    <view class='header'>
        <image src='/images/wechat.png'></image>
    </view>

    <view class='content'>
        <view>申请获取以下权限</view>
        <text>获得你的公开信息(昵称，头像等)</text>
    </view>

    <button class='bottom' type='primary' open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="bindGetUserInfo">
        授权登录
    </button>
</view>


<scroll-view wx:else class="container">
  <!-- top开始 -->
  <view class='top'>
    <view>
      <button class="defalut_btn top-button" bindtap='bindViewMy'>
        <icon class="iconfont icon-identity"></icon>
      </button>
    </view>

    <view class="top-center">
    
      <view class="top-one">
        <text class="top-one-top">400元</text>
        <text>本月收入</text>
      </view>
    
      <view class="top-one">
        <text class="top-one-top">1天</text>
        <text>出勤</text>
      </view>
    
    </view>
    
    <view>
     <view class="horizontal"></view>
    </view>

  </view>
<!-- top结束 -->
<!-- 便利贴开始 -->
  <view class="note">
    
    <!-- 添加项目人 -->
    <view class="note-column-add">
      <button class="defalut_btn top-button" bindtap='bindViewMy'>
        <icon class="iconfont icon-add-identity"></icon>
      </button>
    </view>
    
    <!-- 项目时间 -->
    <view class="note-column-date">
      <text>2018.12.01-2019.03.09</text>
      <text>每天均入400元</text>
    </view>
    
    <!-- 项目名称 -->
    <view class="note-column-project" bindtap='viewdetail'>
      <text class="note-column-project-circle">孙</text>
      <view class="note-column-project-position">
        <text>圆雕</text>
        <text>宋庄</text>
      </view>
  
      <text class="note-column-project-wage">总工资2400元</text>
    </view>

  </view>
<!-- 便利贴结束 -->

<!-- 三种操作功能开始 -->
  <view class="functions">
    <view class="note-column-function-circle">
      <button class="defalut_btn" bindtap='bindViewMy'>
        <icon class="iconfont icon-statistics"></icon>
      </button>
    </view>

    <view class="note-column-function-circle">
      <button class="defalut_btn" bindtap='bindViewMy'>
        <icon class="iconfont icon-edit-account"></icon>
      </button>
    </view>

    <view class="note-column-function-circle">
      <button class="defalut_btn" bindtap='bindViewMy'>
        <icon class="iconfont icon-record"></icon>
      </button>
    </view>

  </view>
<!-- 三种操作功能结束 -->
<!-- 空白条 -->
  <view class="blank-space">
  </view>
<!-- 空白条 -->

<view class="log">
  <text class="log-title">每日一记</text>
  <!-- 记录开始 -->
  <view>
