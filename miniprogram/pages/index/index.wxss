  flex-direction: column;
  justify-content:center;
  text-align: center;
  width: 170rpx;
}

.log-date-time{
  font-weight: 600;
}

.log-detail-circle {
  margin: 55rpx 15rpx 0 15rpx;
  font-size: 25rpx;
  color: #fff;
  width: 30rpx;
  height: 30rpx;
  border-radius: 55rpx;
  background-color: #DFBE39;
}



.log-detail-detail {
  display: flex;
  flex-direction: row;
  justify-content:start;
  background: rgb(235, 233, 233);
  height: 90rpx;
  width: 70%;
