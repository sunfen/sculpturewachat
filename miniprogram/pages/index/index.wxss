/* 遮盖层样式 */
.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgb(0, 0, 0);
  z-index: 9000;
  opacity: 0.7;
}

/* 容器样式 */
.modalDlg{
  width: 620rpx;
  height: 600rpx;
  position: fixed;
  top: 25%;
  z-index: 9999;
  margin: 10rpx 50rpx 10rpx 50rpx;
  background-color: #fff;
  border-radius: 36rpx;
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
}

