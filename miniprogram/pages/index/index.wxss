  flex-direction: column;
  justify-content:space-between;
  margin: 40rpx 5% 0 5%;
}


.log-title {
  font-weight: 600;
  font-size: 34rpx;
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content:flex-start;
}

.log-title-circle{
