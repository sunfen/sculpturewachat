/* 授权登录界面样式开始 */
.container {
  background: #faf8f8;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  font-size: 28rpx;
  font-weight:300;
  color:#313131;
}

.top {
  display: flex;
  flex-direction: column;
  justify-content:space-between;
  height: 280rpx;
  width: 100%;
  background: #d8d8d86c;
}


.top-button {
  display: flex;
  flex-direction: row;
  left: 10%;
}

.top-one {
  display: flex;
  flex-direction: column;
  justify-content:space-between;
  left: 10%;
}

.top-center {
