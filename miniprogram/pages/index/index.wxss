/* 授权登录界面样式开始 */
.container {
  background: #faf8f8;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  font-size: 28rpx;
  font-weight:300;
  color:#313131;
}


/* 便利贴 */
.note {
  position:relative;
  display: flex;
  flex-direction: column;
  justify-content:center;
  text-align: center;
  height: 220rpx;
  background: #986A1C;
}

.note-content{
  width: 90%;
  height:100%;
  background: #fff;
  margin: 0 5% 0 5%;
  display: flex;
  flex-direction: column;
  border-radius: 15rpx 15rpx 0 0;
}


.note-column-add {
  margin-left: 80%;
  width: 20%;
  height: 60rpx;
  border-radius: 0 15rpx 0 15rpx;
  background: rgb(81, 169, 252);
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
}

.note-column-add button {
