  color:#fff;
  font-weight: 400;
  width: 60rpx;
  height: 60rpx;
  border-radius: 55rpx;
  background-color: rgba(165, 166, 167, 0.596);
  margin: 10rpx 0 0 10rpx; 
  line-height:70rpx;
}





/* 滑动删除 */
.touch-item {
  font-size: 14px;
  display: flex;
  justify-content: space-between;
  width: 100%;
  padding: 10px;
  overflow: hidden;
  line-height: 22px;
  margin-right:0;
  margin-left: -90px;
  transition: all 0.4s;
  -webkit-transition: all 0.4s;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
}


.del {
  background-color: orangered;
  width: 60px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  border-radius: 10rpx 10rpx 10rpx 10rpx;
}

.touch-move-active, .touch-move-active .del {

  -webkit-transform: translateX(0);
  transform: translateX(0);
}


