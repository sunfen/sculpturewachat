/*水平线*/
.horizontal {
  border-bottom:  15rpx solid rgba(24, 22, 22, 0.897);
  margin: 0 10% 5% 10%;
}


/* 便利贴 */
.note {
  position:relative;
  display: flex;
  flex-direction: column;
  justify-content:space-around;
  height: 320rpx;
  margin: -6% 11% 10rpx 11%;
  background: rgb(235, 233, 233);
  box-shadow: 0 0 5px rgb(128, 127, 127);
}


.note-column-add {
  margin-left: 80%;
}

.note-column-date {
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  margin: 0 5% 5% 5%;
  border-bottom: 1rpx solid #999898;
}

.note-column-project {
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  margin: 0 5% 0 5%;
  vertical-align: middle;
}

.note-column-project-position {
  display: flex;
  flex-direction: column;
  justify-content:space-between;
}

.note-column-project-wage {
  color: #f71010;
  font-weight: 400;
  margin-right: 10rpx;
  text-align: center;
  line-height:90rpx;
}

.note-column-project-circle{
  color: rgb(2, 2, 2);
  width: 90rpx;
  height: 90rpx;
  font-size: 28rpx;
  border-radius: 55rpx;
  text-align: center;
  line-height: 90rpx;
  background-color: rgba(165, 166, 167, 0.678);
}

.functions {
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  margin: 40rpx 15% 60rpx 14%;
}


.note-column-function-circle{
  color: rgb(2, 2, 2);
  width: 110rpx;
  height: 110rpx;
  border-radius: 55rpx;
  background-color: rgba(165, 166, 167, 0.596);
  text-align: center;
}

.note-column-function-circle text{
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
}


/* 日志 */

.log {
  display: flex;
  flex-direction: column;
  justify-content:space-between;
  margin: 40rpx 11% 0 11%;
}


.log-title {
  font-weight: 400;
  margin-bottom: 30rpx;
}

.log-detail {
  display:flex;
  margin: 10rpx 0 30rpx 0;
}


.log-date {
  display: flex;
  flex-direction: column;
  justify-content:space-around;
  width: 150rpx;
}


.log-detail-circle {
  margin: 55rpx 15rpx 0 15rpx;
  font-size: 25rpx;
  color: rgb(2, 2, 2);
  width: 30rpx;
  height: 30rpx;
  border-radius: 55rpx;
  background-color: rgba(165, 166, 167, 0.596);
}



.log-detail-detail {
  display: flex;
  flex-direction: row;
  justify-content:start;
  background: rgb(235, 233, 233);
  height: 90rpx;
  width: 70%;
  border-radius: 15rpx;
  text-align: center;
  line-height:90rpx;
}

.log-detail-detail-status {
  font-size: 25rpx;
  color:#fff;
  font-weight: 400;
  width: 60rpx;
  height: 60rpx;
  border-radius: 55rpx;
  background-color: rgba(165, 166, 167, 0.596);
  margin: 10rpx 0 0 10rpx; 
  line-height:70rpx;
