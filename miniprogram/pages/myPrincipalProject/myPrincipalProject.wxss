/* pages/index/addProject.wxss */

.content {
  height: 100%; 
  width: 100%;
  padding: 40rpx;
  background: #fff;
}

.detail {
  display: flex;
  flex-direction: column;
  justify-content:space-around;
  margin: 0rpx 40rpx 40rpx 40rpx;
  padding: 20rpx;
  border: 2rpx solid #ccc;
  box-shadow: 10rpx 10rpx 5rpx #888;
  border-radius: 5%;
}

.detail-label {
  font-size: 35rpx;
  font-weight: 600;
  color: rgb(250, 125, 9);
}


.table-header {
    display: flex;
    flex-flow: row;
    justify-content: space-around;
    background: #c7c8ca; 
    width: 100%;
    text-align: center; 
}

.table-body-row {
  display: flex;
  flex-direction: row;
  justify-content:space-around;
  align-items:center;
  border-bottom:1px solid #ccc;
  padding: 10px;
  line-height: 22px;
}

.ellipsis{
  width: 20%;
}





