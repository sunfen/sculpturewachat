.content {
  display: flex;
  flex-direction: column;
  justify-content:flex-start;
  background: #fff;
  width: 100%;
}


.query {
  display: flex;
  flex-direction: column;
  justify-content:space-around;
  background: #c7c8ca; 
  align-items: center;
  height: 200rpx;
}

.query-button {
  width: 500rpx;
  height: 60rpx;
  font-size: 25rpx;  
  font-weight: 300;
  background-color:  #fff;
  -webkit-border-radius: 20px;
  -moz-border-radius: 20px;
  border-radius: 20px;
}

