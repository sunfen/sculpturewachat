    flex-flow: column;
    justify-content: space-around;
}

.table-body-right {
    display: flex;
    flex-flow: column;
    justify-content: space-around;
    font-weight: 600;
}

.table-body-left {
    display: flex;
    flex-flow: column;
    justify-content: space-around;
}

.table-body-left-principal {
    display: flex;
    flex-flow: column;
    justify-content: space-around;
    width: 150rpx;
}


.table-body-row-principal{
    display: flex;
    flex-flow: row;
    justify-content: space-between;
    font-size: 24rpx;
    margin: 20rpx 20rpx 20rpx 20rpx;
    min-height: 100rpx;
    border-bottom: 1rpx solid #c7c8ca;
}
.table-body-center-principal{
    display: flex;
    flex-flow: column;
    justify-content: space-around;
    width: 400rpx;
}



/* 滑动删除 */
.touch-item {
  display: flex;
  justify-content: space-between;
  border-bottom:1px solid #ccc;
  padding: 10px;
  overflow: hidden;
  line-height: 22px;
  margin-right: 30rpx;
  margin-left: -90px;
  transition: all 0.4s;
  -webkit-transition: all 0.4s;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
}



.touch-move-active, .touch-move-active .button-del {

  -webkit-transform: translateX(0);
  transform: translateX(0);
}



.button-del {
  font-size: 14px;
  width: 50px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  color: #fff;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}

.edit {
