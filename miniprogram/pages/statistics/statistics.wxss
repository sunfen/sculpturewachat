scroll-view{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  width: 100%;
  height: 100%;
  overflow: scroll;
}

.header-title{
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
  padding-bottom: 8px;
}

.totalWages{
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
  padding-bottom: 8px;
  font-weight: 600;
  color: rgb(62, 96, 190);
}

.noData{
  font-weight: 600;
  color: rgb(133, 132, 132);
  padding-top: 20%;
}

.header-first picker{
  background:#fff;
  height: 60rpx;
  width: 150rpx;
  color: #000;
  display: flex;
  flex-direction: row;
  justify-content: center;
  text-align: center;
  border-radius: 40rpx;
  margin: 20rpx;
  padding: 2rpx;
}

.header-first{
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  text-align: center;
  font-size: 28rpx;
}

.icon-pull-down {
  font-size: 28rpx;
  color: rgb(141, 137, 137);
}

.statistics{
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
  width: 100%;
  height: 600rpx;
}

.statistics1{
  display: flex;
  flex-direction: column;
