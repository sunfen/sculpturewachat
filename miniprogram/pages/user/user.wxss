/**index.wxss**/

.container {
  background: #faf8f8;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  font-size: 28rpx;
  font-weight:300;
  color:#313131;
}

.top {
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  height: 200rpx;
  width: 100%;
  background: #d8d8d86c;
}

.top-image {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx 0 20rpx 20rpx;
}

.top-text {
  display: flex;
  flex-direction: column;
  justify-content:space-around;
  margin: 40rpx 50% 50rpx 0rpx;
}

.top-text-name {
  font-size: 32rpx;
  font-weight: 400;
}