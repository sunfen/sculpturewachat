/* 弹出框 */
/* 遮盖层样式 */
.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgb(0, 0, 0);
  z-index: 9000;
  opacity: 0.7;
}

/* 容器样式 */
.modalDlg{
  width: 620rpx;
  height: 600rpx;
  position: fixed;
  top: 25%;
  z-index: 9999;
  margin: 10rpx 50rpx 10rpx 50rpx;
  background-color: #fff;
  border-radius: 36rpx;
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
}

.modalDlg-header{
  display: flex;
  flex-direction: row;
  justify-content:flex-end;
  border-bottom: 2rpx solid #b9b7b7c5;
  margin: 10rpx 30rpx 20rpx 20rpx;
  align-items: center;
}

.modalDlg-content{
  display: flex;
  flex-direction: column;
  justify-content:space-around;

}

.modalDlg-content-row{
  display: flex;
  flex-direction: row;
  justify-content:flex-start;
  align-items:center;
  margin-left: 40rpx;
}

.modalDlg-footer{
  display: flex;
  flex-direction: row;
  justify-content:space-around;
  border-top: 2rpx solid #b9b7b7c5;
  background: rgb(248, 172, 32);
  border-bottom-left-radius:  36rpx;
  border-bottom-right-radius:  36rpx;
}




