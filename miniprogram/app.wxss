/* 清楚按钮的默认样式  */

.defalut_btn {
  background: transparent;
  border: none;
  overflow: visible;
  padding-left: 0;
  padding-right: 0;
  margin-left: 0;
  margin-right: 0;
  border-radius: 0;
}

.defalut_btn:after {
  display: none;
}

.text-primary {
  color: #00a2e9;
}

